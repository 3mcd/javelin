{
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "version": "1.0.0-alpha.7",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "next"
      ],
      "conventionalCommits": true,
      "exact": true
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
