  "version": "0.0.1",
  "description": "Fast and simple TypeScript Entity-Component System",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "dependencies": {
    "lerna": "^3.20.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
